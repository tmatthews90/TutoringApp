<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team7.tutoringappv1.FilterActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/btn$"
        android:layout_marginTop="69dp"
        android:layout_toLeftOf="@+id/btn$$"
        android:layout_toStartOf="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$$"
        android:id="@+id/btn$$"
        android:layout_alignTop="@+id/btn$"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$$$"
        android:id="@+id/btn$$$"
        android:layout_alignTop="@+id/btn$$"
        android:layout_toRightOf="@+id/btn$$"
        android:layout_toEndOf="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:id="@+id/textView2"
        android:layout_above="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 5 Miles"
        android:id="@+id/btn5Miles"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/btn$"
        android:layout_alignStart="@+id/btn$" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 15 MILES"
        android:id="@+id/btn15Miles"
        android:layout_above="@+id/txtDistanceValue"
        android:layout_toRightOf="@+id/btn5Miles"
        android:layout_toEndOf="@+id/btn5Miles" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 25 MILES"
        android:id="@+id/btn25Miles"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/btn15Miles"
        android:layout_toEndOf="@+id/btn15Miles"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DISTANCE"
        android:id="@+id/textView6"
        android:layout_above="@+id/btn15Miles"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RATING"
        android:id="@+id/textView7"
        android:layout_above="@+id/ratingBar"
        android:layout_toRightOf="@+id/btn5Miles"
        android:layout_toEndOf="@+id/btn5Miles" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:stepSize="1"
        android:layout_above="@+id/txtRatingValue"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:id="@+id/btnApply"
        android:layout_marginBottom="42dp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtRatingValue"
        android:layout_above="@+id/btnApply"
        android:layout_alignLeft="@+id/txtDistanceValue"
        android:layout_alignStart="@+id/txtDistanceValue"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtDistanceValue"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtPriceValue"
        android:layout_alignStart="@+id/txtPriceValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtPriceValue"
        android:layout_below="@+id/btn$"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
