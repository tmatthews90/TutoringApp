<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team7.tutoringappv1.FilterActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$"
        android:id="@+id/btn$"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/btn$$"
        android:layout_toStartOf="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$$"
        android:id="@+id/btn$$"
        android:layout_alignTop="@+id/btn$"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="$$$"
        android:id="@+id/btn$$$"
        android:layout_alignTop="@+id/btn$$"
        android:layout_toRightOf="@+id/btn$$"
        android:layout_toEndOf="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:id="@+id/textView2"
        android:layout_above="@+id/btn$$"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FILTER"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 5 Miles"
        android:id="@+id/btn5Miles"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn$"
        android:layout_alignLeft="@+id/btn$"
        android:layout_alignStart="@+id/btn$"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 15 MILES"
        android:id="@+id/btn15Miles"
        android:layout_alignTop="@+id/btn5Miles"
        android:layout_toRightOf="@+id/btn5Miles"
        android:layout_toEndOf="@+id/btn5Miles"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="≤ 25 MILES"
        android:id="@+id/btn25Miles"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/btn15Miles"
        android:layout_toEndOf="@+id/btn15Miles"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DISTANCE"
        android:id="@+id/textView6"
        android:layout_above="@+id/btn15Miles"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RATING"
        android:id="@+id/textView7"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/btn5Miles"
        android:layout_toRightOf="@+id/btn5Miles"
        android:layout_toEndOf="@+id/btn5Miles" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:stepSize="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:id="@+id/btnApply"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtRatingValue"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtDistanceValue"
        android:layout_below="@+id/btn5Miles"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-"
        android:id="@+id/txtPriceValue"
        android:layout_below="@+id/btn$"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
